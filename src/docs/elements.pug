  script.
    var currentThemeHref;
    var toggler = document.getElementById('toggler');
    var togglerNotice = document.getElementById('togglerNotice');
    var themeChanger = document.getElementById('theme-changer');

    function toggle() {
      updateThemeHref(isCSSEnabled ? null : currentThemeHref)
      toggler.textContent = isCSSEnabled ? 'Enable CSS' : 'Disable CSS';

      isCSSEnabled = !isCSSEnabled;
    };

    function toggleToggler() {
      if (toggler.style.display !== 'block') {
        isCSSEnabled = true;
        currentThemeHref = document.getElementById('theme').getAttribute('href')

        toggler.addEventListener('click', toggle);

        toggler.style.display = 'block';
        togglerNotice.style.display = 'inline';
        themeChanger.setAttribute('disabled', true);
        
        toggle();
      } else {
        updateThemeHref(currentThemeHref);

        toggler.style.display = 'none';
        togglerNotice.style.display = 'none';
        themeChanger.removeAttribute('disabled');
      }
    }

  style.
